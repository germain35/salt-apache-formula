{%- from "apache/map.jinja" import apache with context -%}
# Managed by salt

# event MPM
# StartServers: initial number of server processes to start
# MinSpareThreads: minimum number of worker threads which are kept spare
# MaxSpareThreads: maximum number of worker threads which are kept spare
# ThreadsPerChild: constant number of worker threads in each server process
# MaxRequestWorkers: maximum number of worker threads
# MaxConnectionsPerChild: maximum number of requests a server process serves
<IfModule mpm_event_module>
  StartServers           {{ apache.mpm.event.config.start_servers }}
  MinSpareThreads        {{ apache.mpm.event.config.min_spare_threads }}
  MaxSpareThreads        {{ apache.mpm.event.config.max_spare_threads }}
  ThreadLimit            {{ apache.mpm.event.config.thread_limit }}
  ThreadsPerChild        {{ apache.mpm.event.config.threads_per_child }}
  MaxRequestWorkers      {{ apache.mpm.event.config.max_request_workers }}
  MaxConnectionsPerChild {{ apache.mpm.event.config.max_connections_per_child }}
</IfModule>
